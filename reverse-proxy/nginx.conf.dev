events {
    worker_connections 1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
    }

    server {
        listen 80;
        server_name localhost;

        error_log  /var/log/nginx/error.log warn;
        access_log /var/log/nginx/access.log;

        # --- Gestion du Frontend ---
        location / {
            proxy_pass http://frontend:80/;
            
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_set_header Host $host;
        }

        # --- API Card (REST) ---
        location /api/card/ {
            proxy_pass http://card:80/;
            
            proxy_http_version 1.1;
            proxy_set_header Host $host;
        }

        # --- API Lobby ---
        location /api/lobby/ {
            proxy_pass http://lobby:80/; 
            
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # --- 3. WebSocket Lobby ---
        location /socket.io/lobby/ {
            rewrite ^/socket.io/lobby/(.*) /socket.io/$1 break;
            
            proxy_pass http://lobby:80;

            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

            proxy_read_timeout 86400;
        }

        # --- Gestion Socket.io Game ---
        location /socket.io/game/ {
            rewrite ^/socket.io/game/(.*) /socket.io/$1 break;
            
            proxy_pass http://game:80;

            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            
            proxy_read_timeout 86400;
        }

        # --- Swagger ---
        location /swagger/ {
            proxy_pass http://swagger-ui:8080/; 
            proxy_set_header Host $host;
        }
    }
}